<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gold Scrap Price Tracker</title>
  <style>
    body { font-family: Arial, sans-serif; background: #f9f9f9; margin: 0; padding: 20px; }
    h1 { text-align: center; color: #bfa13f; }
    .container { max-width: 500px; margin: auto; background: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px #ccc; }
    label { display: block; margin-top: 10px; font-weight: bold; }
    input { width: 100%; padding: 8px; margin-top: 5px; border-radius: 5px; border: 1px solid #ccc; }
    button { margin-top: 15px; padding: 10px; width: 100%; background: #bfa13f; color: white; border: none; border-radius: 5px; cursor: pointer; }
    button:hover { background: #a68f33; }
    p { font-size: 1.2em; text-align: center; margin-top: 10px; }
  </style>
</head>
<body>
  <h1>Gold Scrap Price Tracker</h1>
  <div class="container">
    <p id="livePrices">Loading gold prices...</p>

    <label for="karat24">24K Gold (grams):</label>
    <input type="number" id="karat24" placeholder="0">

    <label for="karat18">18K Gold (grams):</label>
    <input type="number" id="karat18" placeholder="0">

    <label for="karat14">14K Gold (grams):</label>
    <input type="number" id="karat14" placeholder="0">

    <button onclick="calculatePrice()">Calculate Estimated Price</button>

    <p id="result"></p>
  </div>

  <script>
    let goldPrice24 = 60; // Default until API loads
    let goldPrice18 = 45;
    let goldPrice14 = 35;

    async function fetchGoldPrices() {
      try {
        const response = await fetch('https://metals-api.com/api/latest?access_key=YOUR_API_KEY_HERE&base=USD&symbols=XAU');
        const data = await response.json();

        const pricePerOunce = data.rates.XAU; 
        const pricePerGram = pricePerOunce / 31.1035;

        goldPrice24 = pricePerGram;
        goldPrice18 = pricePerGram * 0.75;
        goldPrice14 = pricePerGram * 0.585;

        document.getElementById('livePrices').textContent = 
          `Current Scrap Price per Gram: 24K = $${goldPrice24.toFixed(2)}, 18K = $${goldPrice18.toFixed(2)}, 14K = $${goldPrice14.toFixed(2)}`;
      } catch (err) {
        console.error(err);
        document.getElementById('livePrices').textContent = "Error fetching gold prices. Using default values.";
      }
    }

    function calculatePrice() {
      const g24 = parseFloat(document.getElementById('karat24').value) || 0;
      const g18 = parseFloat(document.getElementById('karat18').value) || 0;
      const g14 = parseFloat(document.getElementById('karat14').value) || 0;

      const total = (g24 * goldPrice24) + (g18 * goldPrice18) + (g14 * goldPrice14);
      document.getElementById('result').textContent = "Estimated Scrap Value: $" + total.toFixed(2);
    }

    fetchGoldPrices();
    setInterval(fetchGoldPrices, 4 * 60 * 60 * 1000); // refresh every 4 hours
  </script>
</body>
</html>
